<Page x:Class="ACMS.Pages.PagesW.ReportFr"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ACMS.Pages.PagesW"
      mc:Ignorable="d" 
      d:DesignHeight="550" d:DesignWidth="620"
      Title="ReportFr">
    <Page.Resources>
        <Style TargetType="{x:Type Label}">
            <Setter Property="Foreground" Value="#d2c2b7" />
            <Setter Property="FontSize" Value="10"/>
        </Style>

        <Style x:Key="ListSt" TargetType="ListView">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#d2c2b7"/>

        </Style>

        <Style x:Key="ButtCom" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>

            <Setter Property="Margin" Value=" 10 5 0 5"/>
            <Setter Property="Padding" Value=" 5"/>
            <Style.Resources>
                <Style TargetType="Image">
                    <Setter Property="Width" Value="15"/>
                    <Setter Property="Height" Value="15"/>
                </Style>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                    <Setter Property="BorderBrush" Value="Transparent"/>
                </Style>
            </Style.Resources>

        </Style>

        <Style x:Key="ButtonReport" TargetType="Button">
            <Setter Property="Width" Value="150"/>
            <Setter Property="Height" Value="23"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#d2c2b7"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Margin" Value="0 10 10 10"/>
        </Style>



        <SolidColorBrush x:Key="TextBox.MouseOver.Border" Color="#6d8228" />
        <SolidColorBrush x:Key="TextBox.Focus.Border" Color="#6d8228"/>

        <ControlTemplate x:Key="ButtonTemplateBox" TargetType="{x:Type TextBox}">
            <Border x:Name="border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" SnapsToDevicePixels="True">
                <ScrollViewer x:Name="PART_ContentHost" Focusable="false" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden"/>
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="IsEnabled" Value="false">
                    <Setter Property="Opacity" TargetName="border" Value="0.56"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="true">
                    <Setter Property="BorderBrush" TargetName="border" Value="{StaticResource TextBox.MouseOver.Border}"/>
                    <Setter Property="BorderThickness" Value="0 0 0 1"/>
                </Trigger>
                <Trigger Property="IsKeyboardFocused" Value="true">
                    <Setter Property="BorderBrush" TargetName="border" Value="{StaticResource TextBox.Focus.Border}"/>
                    <Setter Property="BorderThickness" Value="0 0 0 1"/>
                    <Setter Property="CaretBrush" Value="#d2c2b7"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>

        <!--Height="20"  Width="auto" Orientation="Vertical" HorizontalAlignment="Left"-->
        <Style x:Key="table" TargetType="ListViewItem">
            <Setter Property="Height" Value="auto"/>
            <Setter Property="MinHeight" Value="20"/>
            <Setter Property="Width" Value="auto"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>
        <SolidColorBrush x:Key="ListBox.Disabled.Background" Color="#FFFFFFFF"/>
        <SolidColorBrush x:Key="ListBox.Disabled.Border" Color="#FFD9D9D9"/>

        <Style TargetType="{x:Type ListViewItem}">
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="true">
                    <Setter Property="Background" Value="#292919" />
                </Trigger>
            </Style.Triggers>
        </Style>
        <SolidColorBrush x:Key="Button.MouseOver.Background" Color="#FFBEE6FD"/>
        <SolidColorBrush x:Key="Button.MouseOver.Border" Color="#FF3C7FB1"/>
        <SolidColorBrush x:Key="Button.Pressed.Background" Color="#FFC4E5F6"/>
        <SolidColorBrush x:Key="Button.Pressed.Border" Color="#FF2C628B"/>
        <SolidColorBrush x:Key="Button.Disabled.Background" Color="#FFF4F4F4"/>
        <SolidColorBrush x:Key="Button.Disabled.Border" Color="#FFADB2B5"/>
        <SolidColorBrush x:Key="Button.Disabled.Foreground" Color="#FF838383"/>
        <ControlTemplate x:Key="ButtonTemplateSelectReport" TargetType="{x:Type ButtonBase}">
            <Border x:Name="border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" SnapsToDevicePixels="true">
                <ContentPresenter x:Name="contentPresenter" Focusable="False" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" Margin="{TemplateBinding Padding}" RecognizesAccessKey="True" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="Button.IsDefaulted" Value="true">
                    <Setter Property="BorderBrush" TargetName="border" Value="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="true">
                    <Setter Property="Background" TargetName="border" Value="{StaticResource Button.MouseOver.Background}"/>
                    <Setter Property="BorderBrush" TargetName="border" Value="{StaticResource Button.MouseOver.Border}"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="true">
                    <Setter Property="Background" TargetName="border" Value="{StaticResource Button.Pressed.Background}"/>
                    <Setter Property="BorderBrush" TargetName="border" Value="{StaticResource Button.Pressed.Border}"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="false">
                    <Setter Property="Background" TargetName="border" Value="{StaticResource Button.Disabled.Background}"/>
                    <Setter Property="BorderBrush" TargetName="border" Value="{StaticResource Button.Disabled.Border}"/>
                    <Setter Property="TextElement.Foreground" TargetName="contentPresenter" Value="{StaticResource Button.Disabled.Foreground}"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>

        <Style x:Key="datePickerSt" TargetType="DatePicker">
            <Setter Property="Margin" Value="15 0 0 0"/>
            <Setter Property="Background" Value="#292919"/>
            <Setter Property="Foreground" Value="#d2c2b7"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Style.Resources>
                <Style TargetType="DatePickerTextBox">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Width" Value="100"/>
                    <Setter Property="Padding" Value="5 0 5 0"/>
                </Style>
            </Style.Resources>
        </Style>

        <Style x:Key="ButtAuth" TargetType="Button">
            <Setter Property="Background" Value="#c09954"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Margin" Value="20 20 0 10"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Width" Value="160"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Foreground" Value="#d2c2b7"/>
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Style.Resources>
        </Style>

    </Page.Resources>


    <Grid Background="Transparent">

        <Border CornerRadius="5" Height="500" Width="600" BorderBrush="Transparent" VerticalAlignment="Center" Margin="10 20" Padding="0 0 0 10">
            <Border.Background>
                <SolidColorBrush Color="#292919" Opacity="0.8"/>
            </Border.Background>

            <StackPanel>
                <Label x:Name="labelEmpl" Content="Отчеты" Foreground="#d2c2b7" FontSize="25" Margin="10 10 0 0"/>

                <WrapPanel >

                    <Button Style="{StaticResource ButtonReport}" Content="Работники за день"/>
                    <Button Template="{DynamicResource ButtonTemplateSelectReport}" Style="{StaticResource ButtonReport}" Content="Посещаемость сотрудника"/>

                </WrapPanel>
                <WrapPanel>
                    <StackPanel>
                        <DatePicker Name="dateEployees" Style="{StaticResource datePickerSt}"/>
                        <ComboBox x:Name="employeesName" Margin="20 10 0 0"/>
                    </StackPanel>
                    
                    <StackPanel>
                        
                    </StackPanel>
                </WrapPanel>
                <Button Style="{StaticResource ButtAuth}" Template="{DynamicResource ButtonTemplateAuth}" Content="Сформировать отчет"/>

                <Grid Margin="10 0">
                    <Grid.ColumnDefinitions>
                        <!--580-->
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="110"/>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="140"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <Label FontSize="12" x:Name="ListSecN" Grid.Column="0" Content="Фамилия" />
                    <Label FontSize="12" x:Name="ListFName" Grid.Column="1" Content="Имя"/>
                    <Label FontSize="12" x:Name="ListPatron" Grid.Column="2" Content="Отчество"/>
                    <Label FontSize="12" x:Name="ListPost" Grid.Column="3" Content="Должность"/>
                    <Label FontSize="12" x:Name="ListOrg" Grid.Column="4" Content="Организация"/>

                    <ListView   Grid.Row="1" Grid.ColumnSpan="5" BorderBrush="#292919"  x:Name="listEmpl" MinHeight="270" Style="{StaticResource ListSt}">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="100" />
                                        <ColumnDefinition Width="110"/>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="140"/>
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <ListViewItem Grid.Row="2" Grid.Column="0" Style="{StaticResource table}">
                                        <TextBlock Width="auto" TextWrapping="Wrap" Height="auto">
<Run Text="{Binding Secondname}"/>
                                        </TextBlock>
                                    </ListViewItem>

                                    <StackPanel Grid.Row="2" Grid.Column="1" Style="{StaticResource table}">
                                        <TextBlock Width="auto" TextWrapping="Wrap" Height="auto">
             <Run Text="{Binding Fistname}"/>
                                        </TextBlock>
                                    </StackPanel>
                                    <StackPanel Grid.Row="2" Grid.Column="2" Style="{StaticResource table}">
                                    <TextBlock Width="auto" TextWrapping="Wrap" Height="auto">
<Run Text="{Binding Patronymic}"/>
                                    </TextBlock>
                                </StackPanel>
                                    <StackPanel Grid.Row="2" Grid.Column="3" Style="{StaticResource table}">
                                        <TextBlock Width="auto" TextWrapping="Wrap" Height="auto">
            <Run Text="{Binding Posts.TitlePost}"/>
                                        </TextBlock>
                                    </StackPanel>
                                    <StackPanel Grid.Row="2" Grid.Column="4" Style="{StaticResource table}">
                                        <TextBlock Width="auto" TextWrapping="Wrap" Height="auto">
<Run Text="{Binding Organizations.OrgName}"/>
                                        </TextBlock>
                                    </StackPanel>
                                
                            </Grid>

                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                </Grid>
            </StackPanel>

        </Border>

    </Grid>
</Page>
