<Page x:Class="ACMS.Pages.PagesW.AddEdit.AddEmployee"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ACMS.Pages.PagesW.AddEdit"
      mc:Ignorable="d" 
      d:DesignHeight="550" d:DesignWidth="620"
      Title="AddEmployee">
    <Page.Resources>
        <Style TargetType="{x:Type Label}">
            <Setter Property="Foreground" Value="#d2c2b7" />
            <Setter Property="FontSize" Value="10"/>
        </Style>

        <Style x:Key="ListSt" TargetType="ListView">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#d2c2b7"/>

        </Style>

        <Style x:Key="ButtCom" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>

            <Setter Property="Margin" Value=" 10 5 0 5"/>
            <Setter Property="Padding" Value=" 5"/>
            <Style.Resources>
                <Style TargetType="Image">
                    <Setter Property="Width" Value="15"/>
                    <Setter Property="Height" Value="15"/>
                </Style>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                    <Setter Property="BorderBrush" Value="Transparent"/>
                </Style>
            </Style.Resources>

        </Style>

        <Style x:Key="textBoxSearch" TargetType="TextBox">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
        </Style>
        
        <Style x:Key="TextBoxLog" TargetType="TextBox">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Width" Value="220"/>
            <Setter Property="Height" Value="25"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Foreground" Value="#d2c2b7"/>
            <Setter Property="FontSize" Value="14"/>

        </Style>


        <SolidColorBrush x:Key="TextBox.MouseOver.Border" Color="#c09954"/>
        <SolidColorBrush x:Key="TextBox.Focus.Border" Color="#c09954"/>

        <ControlTemplate x:Key="TextBoxTemplateTB" TargetType="{x:Type TextBoxBase}">
            <Border x:Name="border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" SnapsToDevicePixels="True">
                <ScrollViewer x:Name="PART_ContentHost" Focusable="false" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden"/>
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="IsEnabled" Value="false">
                    <Setter Property="Opacity" TargetName="border" Value="0.56"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="true">
                    <Setter Property="BorderBrush" TargetName="border" Value="{StaticResource TextBox.MouseOver.Border}"/>
                    <Setter Property="BorderThickness" Value="0 0 0 1"/>
                </Trigger>
                <Trigger Property="IsKeyboardFocused" Value="true">
                    <Setter Property="BorderBrush" TargetName="border" Value="{StaticResource TextBox.Focus.Border}"/>
                    <Setter Property="BorderThickness" Value="0 0 0 1"/>
                    <Setter Property="CaretBrush" Value="#d2c2b7"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>

        <Style x:Key="comboStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Width" Value="220"/>
            <Setter Property="Height" Value="25"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Foreground" Value="#d2c2b7"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style x:Key="ButtAuth" TargetType="Button">
            <Setter Property="Background" Value="#c09954"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Margin" Value="0 20 0 0"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Width" Value="160"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Foreground" Value="#d2c2b7"/>
            
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Style.Resources>
        </Style>

    </Page.Resources>


    <Grid Background="Transparent">

        <Border CornerRadius="5"  Width="600" BorderBrush="Transparent" VerticalAlignment="Center" Margin="10 20" Padding="0 0 0 10">
            <Border.Background>
                <SolidColorBrush Color="#292919" Opacity="0.8"/>
            </Border.Background>

            <StackPanel>
                
                <StackPanel >
                    <Label x:Name="labelEmpl" Content="Создание" Foreground="#d2c2b7" FontSize="25" Margin="10 10 0 0"/>
                    <Border x:Name="BorderLog" CornerRadius="5" BorderBrush="Transparent"  Margin="50 20 50 5"  Padding="10 5">
                        <Border.Background>
                            <SolidColorBrush Color="#553821" Opacity="0.6"/>
                        </Border.Background>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>

                                <StackPanel>
                                <Label x:Name="secondNText" FontSize="12" Content="Фамилия" Margin="0 5 0 2"/>
                                    <TextBox Text="{Binding FistName}" Template="{DynamicResource TextBoxTemplateTB}" x:Name="secondN" Margin="5 0 0 5"  Style="{StaticResource TextBoxLog}" TextChanged="secondN_TextChanged" />

                                <Label x:Name="NameText" FontSize="12" Content="Имя" Margin="0 2 0 2"/>
                                <TextBox x:Name="Name"  Text="{Binding Secondname}" Template="{DynamicResource TextBoxTemplateTB}" Margin="5 0 0 5" Style="{StaticResource TextBoxLog}" TextChanged="Name_TextChanged"/>


                                <Label x:Name="PatonText" FontSize="12" Content="Отчество" Margin="0 2 0 2"/>
                                <TextBox x:Name="Patron"  Text="{Binding Patronymic}" Template="{DynamicResource TextBoxTemplateTB}" Margin="5 0 0 5" Style="{StaticResource TextBoxLog}" TextChanged="Patron_TextChanged"/>

                                </StackPanel>

                            <StackPanel Grid.Column="1"  x:Name="StackLogin" Margin="10 5 10 5">

                                <Label FontSize="12" x:Name="PostText" Content="Должность" Margin="0 2 0 2"/>
                                <ComboBox Template="{DynamicResource ComboBoxTemplateAdd}" x:Name="PostName" SelectedItem="{Binding Posts.TitleP}" Margin="5 0 0 5" Style="{StaticResource comboStyle}"/>

                                <Label x:Name="DepText" FontSize="12" Content="Департамент" Margin="0 2 0 2"/>
                                <ComboBox Template="{DynamicResource ComboBoxTemplateAdd}" SelectedItem="{Binding Departments.TitleDep}" x:Name="DepName" Margin="5 0 0 5" Style="{StaticResource comboStyle}"/>

                                <Label x:Name="OrgText" FontSize="12" Content="Организация" Margin="0 2 0 2"/>
                                <ComboBox Template="{DynamicResource ComboBoxTemplateAdd}" x:Name="OrgName" SelectedItem="{Binding Organizations.OrgName}" Margin="5 0 0 5" Style="{StaticResource comboStyle}"/>

                            </StackPanel>
                            
                        </Grid>
                        
                    </Border>
                    <Button x:Name="addNewEmplButt" Click="addNewEmpl"  Content="Добавить" Style="{StaticResource ButtAuth}" HorizontalAlignment="Center" Template="{DynamicResource ButtonTemplateAuth}"/>
                </StackPanel>
            </StackPanel>

        </Border>

    </Grid>
</Page>
