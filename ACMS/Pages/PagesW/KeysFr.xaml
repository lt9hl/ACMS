<Page x:Class="ACMS.Pages.PagesW.KeysFr"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ACMS.Pages.PagesW"
      mc:Ignorable="d" 
      d:DesignHeight="550" d:DesignWidth="620"
      Title="KeysFr">
    <Page.Resources>
        <Style TargetType="{x:Type Label}">
            <Setter Property="Foreground" Value="#d2c2b7" />
            <Setter Property="FontSize" Value="10"/>
        </Style>

        <Style x:Key="ListSt" TargetType="ListView">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#d2c2b7"/>
            <Setter Property="Width" Value="150"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>

        <Style x:Key="ButtCom" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>

            <Setter Property="Margin" Value=" 10 5 0 5"/>
            <Setter Property="Padding" Value="5"/>
            <Style.Resources>
                <Style TargetType="Image">
                    <Setter Property="Width" Value="15"/>
                    <Setter Property="Height" Value="15"/>
                </Style>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                    <Setter Property="BorderBrush" Value="Transparent"/>
                </Style>
            </Style.Resources>

        </Style>

        <Style x:Key="textBoxSearch" TargetType="TextBox">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
        </Style>

        <SolidColorBrush x:Key="TextBox.MouseOver.Border" Color="#6d8228" />
        <SolidColorBrush x:Key="TextBox.Focus.Border" Color="#6d8228"/>

        <ControlTemplate x:Key="ButtonTemplateBox" TargetType="{x:Type TextBox}">
            <Border x:Name="border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" SnapsToDevicePixels="True">
                <ScrollViewer x:Name="PART_ContentHost" Focusable="false" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden"/>
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="IsEnabled" Value="false">
                    <Setter Property="Opacity" TargetName="border" Value="0.56"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="true">
                    <Setter Property="BorderBrush" TargetName="border" Value="{StaticResource TextBox.MouseOver.Border}"/>
                    <Setter Property="BorderThickness" Value="0 0 0 1"/>
                </Trigger>
                <Trigger Property="IsKeyboardFocused" Value="true">
                    <Setter Property="BorderBrush" TargetName="border" Value="{StaticResource TextBox.Focus.Border}"/>
                    <Setter Property="BorderThickness" Value="0 0 0 1"/>
                    <Setter Property="CaretBrush" Value="#d2c2b7"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>

        <!--Height="20"  Width="auto" Orientation="Vertical" HorizontalAlignment="Left"-->
        <Style x:Key="table" TargetType="StackPanel">
            <Setter Property="Height" Value="auto"/>
            <Setter Property="MinHeight" Value="20"/>
            <Setter Property="Width" Value="auto"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>

        <Style x:Key="comboStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Width" Value="220"/>
            <Setter Property="Height" Value="25"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Foreground" Value="#d2c2b7"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

    </Page.Resources>


    <Grid Background="Transparent">

        <Border CornerRadius="5" Height="500" Width="600" BorderBrush="Transparent" VerticalAlignment="Center" Margin="10 20" Padding="0 0 0 10">
            <Border.Background>
                <SolidColorBrush Color="#292919" Opacity="0.8"/>
            </Border.Background>

            <StackPanel>
                <StackPanel >
                    <Label x:Name="labelEmpl" Content="Пропуска" Foreground="#d2c2b7" FontSize="25" Margin="10 10 0 0"/>

                    <StackPanel x:Name="StackMenu" Orientation="Horizontal">
                        <Button x:Name="addButt" Style="{StaticResource ButtCom}"  Template="{DynamicResource ButtonTemplateAuth}" >
                            <Image x:Name="addIm" Source="\Images\workIcons\add.png"/>
                        </Button>

                        <Button x:Name="editButt" Style="{StaticResource ButtCom}" Template="{DynamicResource ButtonTemplateAuth}" >
                            <Image x:Name="EditIm" Source="\Images\workIcons\edit.png"/>
                        </Button>

                        <Button x:Name="delButt" Style="{StaticResource ButtCom}" Template="{DynamicResource ButtonTemplateAuth}">
                            <Image x:Name="ImDel" Source="\Images\workIcons\trash.png"/>
                        </Button>

                        <ComboBox x:Name="sortSelect" Template="{DynamicResource ComboBoxTemplateAdd}" Width="110" Style="{StaticResource comboStyle}" Margin="20 0 0 0 " />

                        <Button x:Name="SortButt"  Style="{StaticResource ButtCom}" Template="{DynamicResource ButtonTemplateAuth}">
                            <Image x:Name="ImSort" Source="\Images\icons\sort.png"/>
                        </Button>

                        <TextBox BorderBrush="#6d8228" FontSize="12" Foreground="#d2c2b7" BorderThickness="0 0 0 1" x:Name="searchBox"  Margin="150 0 0 0" Width="150" Height="20" Template="{DynamicResource ButtonTemplateBox}"  Style="{StaticResource textBoxSearch}" />
                    </StackPanel>
                </StackPanel>

                <Grid Margin="10 0">
                    <Grid.ColumnDefinitions>
                        <!--580-->
                        <ColumnDefinition Width="150"/>

                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <Label FontSize="12" x:Name="ListFIO" Grid.Column="0" Content="ФИО" />

                    <ListView   Grid.Row="1" Grid.ColumnSpan="5" BorderBrush="#292919"  x:Name="listAllKeys" Height="390" Style="{StaticResource ListSt}">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <StackPanel Grid.Row="2" Grid.Column="0" Style="{StaticResource table}">
                                        <TextBox Width="auto" TextWrapping="Wrap" Height="auto">
                                            <TextBox.Text>
                                                <MultiBinding Converter="{StaticResource MultiValueConverter}">
                                                    <Binding Path="Keys.Employees.Firstname"/>
                                                    <Binding Path="Keys.Employees.Secondname"/>
                                                </MultiBinding>
                                            </TextBox.Text>
                                        </TextBox>
                                    </StackPanel>

                                </Grid>

                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </StackPanel>

        </Border>

    </Grid>
</Page>
